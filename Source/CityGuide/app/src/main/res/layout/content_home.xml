
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background = "@drawable/bg"
    android:fillViewport="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/food_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/roundcorner"
                android:contentDescription="Food"
                android:onClick="getFood"
                android:src="@drawable/food3" />


            <ImageButton
                android:id="@+id/events_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:contentDescription="Events"
                android:onClick="getEvents"
                android:src="@drawable/event1" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Food"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Events"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/places_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:contentDescription="places"
                android:onClick="getPlaces"
                android:src="@drawable/location" />

            <ImageButton
                android:id="@+id/transport_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:contentDescription="transport"
                android:onClick="getTransport"
                android:src="@drawable/transport1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Places"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Travel &amp; Transport"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/schedule_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"
                android:contentDescription="Schedule"
                android:onClick="gotoSchedule"
                android:src="@drawable/schedule1" />

            <ImageButton
                android:id="@+id/trends_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:contentDescription="trends"
                android:onClick="getTrends"
                android:src="@drawable/trends1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="My Schedule"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Trends"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
